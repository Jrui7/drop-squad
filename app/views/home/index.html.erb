<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="logo">Drop Squad Pickleball</div>
    <ul class="nav-links">
      <li><a href="#">Home</a></li>
      <li><a href="#about">About</a></li>
      <li><a href="#book">Book</a></li>
      <li><a href="#contact">Contact</a></li>
    </ul>
  </nav>

  <!-- Hero Section -->
  <section class="hero" id="home">
    <%= image_tag "drop-squad.png", alt: "Drop Squad Pickleball", class: "hero-image" %>
    <div class="hero-overlay">
      <h1>Join Drop Squad Pickleball</h1>
      <p>Brooklyn's Urban Pickleball Hub – Coming Soon to East Williamsburg/Bushwick</p>
      <a href="#book" class="cta-button">Sign Up for Updates</a>
    </div>
  </section>

  <!-- About Section -->
  <section class="about" id="about">
    <h2>About Us</h2>
    <p>Drop Squad is the artsy, street-smart pickleball club for Brooklyn's creative crowd. Join the waitlist to be first in line!</p>
  </section>

  <!-- Booking/Interest Form (mesure d'intérêt) -->
  <section class="book" id="book">
    <h2>Interested? Book a Spot or Join Waitlist</h2>
    <form action="/submit-interest" method="post"> <!-- Ajoutez une route Rails pour traiter ce formulaire plus tard -->
      <input type="email" placeholder="Your Email" required>
      <input type="text" placeholder="Preferred Date (optional)">
      <button type="submit" class="cta-button">Submit</button>
    </form>
    <p>We'll notify you when bookings open!</p>
  </section>

  <!-- App Downloads -->
  <section class="apps">
    <h2>Download Our App (Coming Soon)</h2>
    <a href="https://www.apple.com/app-store/" class="app-link">App Store</a>
    <a href="https://play.google.com/" class="app-link">Google Play</a>
  </section>

  <!-- Map -->
  <section class="map" id="map">
    <h2>Our Location</h2>
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.947!2d-73.934!3d40.704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a!2s555+Johnson+Ave%2C+Brooklyn%2C+NY+11206!5e0!3m2!1sfr!2sus!4v162679!5m2!1sfr!2sus" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
  </section>

  <!-- Footer -->
  <footer>
    <p>© 2025 Drop Squad Pickleball</p>
  </footer>
</body>
</html>